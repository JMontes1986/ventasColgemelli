rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access for products, but restrict writes to authenticated users.
    // This is needed for the self-service page to display products.
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow anyone to create a purchase.
    // Allow users to read their own purchases by matching their cedula.
    // Restrict updates and deletes to prevent tampering.
    match /purchases/{purchaseId} {
      allow create: if true;
      allow read: if request.query.where.path == "cedula" && request.query.where.value == resource.data.cedula;
      allow update, delete: if false;
    }
  }
}